@model ViewModel.ProjectVM
@{
    ViewBag.Title = "New Footmark";
}

<link href="~/Content/bootstrap-datetimepicker.min.css" rel="stylesheet" />
<h2>New Footmark</h2>

<hr />

<form class="form-horizontal" action="/footmark/doaddfootmark" method="post">
    @Html.HiddenFor(m => m.ID)
    <div class="form-group">
        <label for="inputContent" class="col-sm-2 control-label">Content</label>
        <div class="col-sm-10">
            <textarea name="content" id="inputContent" style="width:300px;" rows="6" placeholder=""></textarea>
        </div>
    </div>
    <div class="form-group">
        <label for="inputPassword" class="col-sm-2 control-label">Marktime</label>
        <div class="col-sm-10">
            <input type="text" id="inputMarkTime" name="marktime" placeholder="yyyy-MM-dd HH:mm:ss">
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-primary">ADD</button>
        </div>
    </div>
</form>

@section scripts{
    <script src="~/Scripts/bootstrap-datetimepicker.min.js"></script>
    <script type="text/javascript">
        $(function () {
            $('#inputMarkTime').datetimepicker({
                format: 'yyyy-mm-dd hh:ii:ss',
                autoclose: true
            });

            $('#inputMarkTime').datetimepicker("setDate", new Date());
        })
    </script>
}
