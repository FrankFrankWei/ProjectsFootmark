@model ViewModel.ProjectVM
@{
    ViewBag.Title = "AddFootmark";
}

<h2>AddFootmark</h2>

<hr />

<form class="form-horizontal" action="/footmark/doaddfootmark" method="post">
    @Html.HiddenFor(m => m.ID)
    <div class="form-group">
        <label for="inputContent" class="col-sm-2 control-label">Content</label>
        <div class="col-sm-10">
            <textarea name="content" id="inputContent" rows="3" placeholder=""></textarea>
        </div>
    </div>
    <div class="form-group">
        <label for="inputPassword" class="col-sm-2 control-label">Password</label>
        <div class="col-sm-10">
            <input type="text" id="inputMarkTime" name="marktime" placeholder="yyyy-MM-dd HH:mm:ss">
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-default">ADD</button>
        </div>
    </div>
</form>
